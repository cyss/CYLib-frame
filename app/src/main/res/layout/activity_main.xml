<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/hw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world" />

    <EditText
        android:id="@+id/et"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />


    <EditText
        android:id="@+id/name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/age"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="click" />

    <Button
        android:id="@+id/toFragment"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="To Fragment" />

    <Button
        android:id="@+id/showInjection"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Show Injection" />

    <Button
        android:id="@+id/executeSync"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Execute Sync" />

    <test.frame.cyss.com.testdemo.CustomView
        android:id="@+id/comment"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"></test.frame.cyss.com.testdemo.CustomView>

</LinearLayout>
