<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical">
    <FrameLayout
        android:id="@+id/contentContainer"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/tabsContainer"
        android:layout_below="@+id/actionBar"></FrameLayout>

    <RadioGroup
        android:id="@+id/tabsContainer"
        android:layout_width="fill_parent"
        android:layout_height="54dp"
        android:layout_alignParentBottom="true"
        android:background="@color/defaultBlue"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/tab1"
            style="@style/tabBarItem"
            android:tag="tab1"
            android:text="@string/tab1Title" />

        <RadioButton
            android:id="@+id/tab2"
            style="@style/tabBarItem"
            android:tag="tab2"
            android:text="@string/tab2Title" />

        <RadioButton
            android:id="@+id/tab3"
            style="@style/tabBarItem"
            android:tag="tab3"
            android:text="@string/tab3Title" />

        <RadioButton
            android:id="@+id/tab4"
            style="@style/tabBarItem"
            android:tag="tab4"
            android:text="@string/tab4Title" />
    </RadioGroup>
</RelativeLayout>
